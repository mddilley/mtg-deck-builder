<div class="container">
  <a class="btn btn-outline-primary" href="/decks/new" role="button">Create a New Deck</a>
  <br><br><br>
</div>

<div class="container">

<% if @user.decks != [] %>

<% @user.decks.each_with_index do |deck, i| %>

    <% if ((i % 3 == 0) || i == 0) %>

    <div class="row">

    <% end %>

    <div class="col-sm-4">

      <a href="/decks/<%= deck.id %>"><h4><%= deck.name %></h4></a>

      <p>Color(s): <%= mana_colors_to_img(deck.color) %></p>

      <p>Size: <%= deck.size %> cards </p>

    </div>

    <% if (i + 1) % 3 == 0  %>

    </div>
    <br>
    <% end %>

<% end %>

<% else %>

  You have no decks in your collection.

<% end %>
</div>
