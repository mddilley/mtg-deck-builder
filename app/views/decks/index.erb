<div class="container">
  <h3><a href="/decks/new">Create a New Deck</a></h3>
  <br>
</div>

<div class="container">

<% @user.decks.each_with_index do |deck, i| %>

    <% if ((i % 3 == 0) || i == 0) %>

    <div class="row">

    <% end %>

    <div class="col-sm-4">

      <a href="/decks/<%= deck.id %>"><h4><%= deck.name %></h4></a>

      <p>Color(s): <%= eval(deck.color).join(" / ") %></p>

      <p>Size: <%= deck.size %> cards </p>

    </div>

    <% if (i + 1) % 3 == 0  %>

    </div>
    <br>
    <% end %>

<% end %>

</div>
